<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_note"
    android:layout_width="150dp"
    android:layout_height="300dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/bg_note_big"
    android:padding="5dp">

    <TextView
        android:id="@+id/textView_noteDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1900-01-01"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_noteText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:maxLines="12"
        android:text="Note text probably about something really really important."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_noteDate" />
</androidx.constraintlayout.widget.ConstraintLayout>